<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play !!!"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/col"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/base" />

    <ImageView
        android:id="@+id/d1"
        android:layout_width="332dp"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="@+id/base"
        app:layout_constraintEnd_toEndOf="@+id/base"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/base"
        app:layout_constraintTop_toTopOf="@+id/base" />

    <ImageView
        android:id="@+id/d2"
        android:layout_width="386dp"
        android:layout_height="352dp"
        app:layout_constraintBottom_toBottomOf="@+id/base"
        app:layout_constraintEnd_toEndOf="@+id/base"
        app:layout_constraintStart_toStartOf="@+id/base"
        app:layout_constraintTop_toTopOf="@+id/base" />

    <TableLayout
        android:id="@+id/circleset"
        android:layout_width="360dp"
        android:layout_height="361dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="360dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/c1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="0" />

            <ImageView
                android:id="@+id/c2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="1" />

            <ImageView
                android:id="@+id/c3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="2" />
        </TableRow>

        <TableRow
            android:layout_width="356dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/c4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="3" />

            <ImageView
                android:id="@+id/c5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="4" />

            <ImageView
                android:id="@+id/c6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="5" />
        </TableRow>

        <TableRow
            android:layout_width="358dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/c7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="6" />

            <ImageView
                android:id="@+id/c8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="7" />

            <ImageView
                android:id="@+id/c9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="clicked"
                android:padding="20dp"
                android:tag="8" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="421dp"
        android:layout_height="343dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/base">

        <ImageView
            android:id="@+id/r1"
            android:layout_width="391dp"
            android:layout_height="86dp" />

        <ImageView
            android:id="@+id/r2"
            android:layout_width="403dp"
            android:layout_height="86dp"
            android:layout_marginTop="37dp" />

        <ImageView
            android:id="@+id/r3"
            android:layout_width="401dp"
            android:layout_height="86dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/col"
        android:layout_width="389dp"
        android:layout_height="304dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/base">

        <ImageView
            android:id="@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/col2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>